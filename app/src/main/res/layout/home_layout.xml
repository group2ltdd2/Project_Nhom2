<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#cc6633"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:layout_margin="20dp"
        android:background="@drawable/background_musicvideo"
        android:gravity="center"

        >
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_margin="20dp"
        android:background="#ff6633"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/btnVideoView"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_margin="10dp"
            android:background="@drawable/background_video"
            android:layout_height="match_parent" />
        <ImageButton
            android:id="@+id/btnMucsicView"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_margin="10dp"
            android:background="@drawable/background_music"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>